<% if @friend %>

<div class="highlight">

<h1><%= @friend.full_name %></h1>



<p>Do you really want to follow <%= @friend.full_name %>'s reviews?</p>


<%= simple_form_for @user_friendship, method: :post do |form| %>

<div class="form form-action">
	<%= form.hidden_field :friend_id, value: @friend.profile_name %>
	<%= submit_tag "Yes, Follow", class: 'btn btn-primary btn-xs btn-info' %>
	<%= link_to "Cancel", profile_path(@friend), class: 'btn btn-primary btn-xs btn-warning' %>
</div>
</div>

<% end %>
<% end %>
