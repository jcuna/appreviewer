<div class="container">
	<div class="row">
			<div class="col-md-4 col-md-offset-4">
			<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), html: {class: "well form-signin"}) do |f| %>

			<fieldset>
				<legend><h2>Sign in</h2></legend>

			<%= f.input :email, label: false, placeholder: "email", input_html: { class: "form-control" } %><br>
			<%= f.input :password, label: false, placeholder: "Password", input_html: { class: "form-control" } %>

			<% if devise_mapping.rememberable? -%>
			<div><%= f.input_field :remember_me, as: :boolean, inline_label: "Remember me" %></div><br>
			<% end -%>

			<div><%= f.submit "Sign In", :class => "btn btn-lg btn-primary btn-block" %></div>
			</fieldset>

			<% end %>

			<%= render "devise/shared/links" %>

		</div>

	</div>

</div>