<div class="row">
		<div class="col-md-4">
		<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), html: {class: "well"}) do |f| %>

		<fieldset>
			<legend><h2>Sign in</h2></legend>

		<%= f.input :email %><br>
		<%= f.input :password %><br>

		<% if devise_mapping.rememberable? -%>
		<div><%= f.input :remember_me, as: :boolean%></div><br>
		<% end -%>

		<div><%= f.button :submit, "Sign in" %></div>
		</fieldset>

		<% end %>

		<%= render "devise/shared/links" %>
	</div>
	<div class="col-md-8">
		<h2>Please sign in with your mercy network account</h2>
	</div>
</div>