<div class="page-header">
	<div class="row">
		<div class="col-md-1">
			<%= image_tag @user.gravatar_url %><%= link_to "Follow Reviews", new_user_friendships_path(friend_id: @user), class: 'btn btn-xs btn-info' %>
		</div>
		<div class="col-md-6">
		<h1>&nbsp;<%= @user.full_name %></h1>
			
	</div>
</div>
		<h3>Reviews history</h3>
	</div>

	<% if @statuses %>
		<% @statuses.each do |status| %>
			<div class ="well">
				<span style="color:#5cb85c;"><strong> Appname </span></strong><br>
				<%= status.content %>
				<hr />
				<%= link_to time_ago_in_words(status.created_at), status_path(status) %> ago

				</div>
			<% end %>
	<% end %> 