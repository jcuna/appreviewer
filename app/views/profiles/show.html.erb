<div class="page-header">
	<div class="row">
		<div class="col-md-1">
			<%= image_tag @user.gravatar_url %>
		</div>
		<div class="col-md-6 ">
			<div style="padding-left:8px;font-size:30px;line-height:normal">
				<%= @user.full_name %><br>
				<% if @user != current_user %>

			<div id="friend-status">
				<% if current_user.friends.include?(@user) || current_user.pending_friends.include?(@user) %>
				<%= link_to "Edit Friendship", edit_user_friendship_path(friend_id: @user), class: 'btn btn-ss btn-info' %>
				<% else %>
				<%= link_to "Follow Reviews", new_user_friendship_path(friend_id: @user), class: 'btn btn-ss btn-info', id: 'add-friendship', data: { friend_id: @user.to_param } %>
				<% end %>
			</div>


				<% end %>
			</div>	
		</div>
</div>
		<h3>Reviews history</h3>
	</div>

	<% if @statuses %>
		<% @statuses.each do |status| %>
			<div class ="highlight">
				<span style="color:#5cb85c;"><strong> Appname </span></strong><br>
				<%= status.content %>
				<hr />
				<%= link_to time_ago_in_words(status.created_at), status_path(status) %> ago
				</div>
			<% end %>
	<% end %> 