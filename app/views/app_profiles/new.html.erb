<h1 class="highlight" align="center">Please enter the App information.</h1>
<div class="well form-signin">
	<div class="row">
		<div class="col-md-4 col-md-offset-4">
			<div class="form form-action">

		<%= simple_form_for @app_profile, :url => newreview_path do |f| %>

		<%= f.hidden_field :app_id, value: @app_id %>
		<%= f.input :name, label: false, placeholder: "App Name", input_html: { class: "form-control"} %>
				<br>
				<%= f.submit "Continue", :class => "btn btn-md btn btn-success btn-block" %>
				<%= link_to 'Back', statuses_path %>
			</div>
			</div>
			</div>
		</div>
	<% end %> 

</div>
